<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPerguntas12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Topo com logo -->

    <!-- Número da pergunta -->

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_box"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="Logo AMIP"
            android:src="@drawable/imagem1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textNumeroPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12)"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <!-- Título -->
    <TextView
        android:id="@+id/textTituloPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUTISMO (PARA TODAS AS PESSOAS)"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Enunciado -->
    <TextView
        android:id="@+id/textPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALGUM MORADOR JÁ FOI DIAGNOSTICADO(A) COM AUTISMO POR ALGUM PROFISSIONAL DE SAÚDE?"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- RadioGroup com fundo azul claro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_box"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <RadioGroup
            android:id="@+id/radioGroupResposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioSim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sim" />

            <RadioButton
                android:id="@+id/radioNao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não" />
        </RadioGroup>
    </LinearLayout>

    <!-- Botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#D6EEF0"
            android:textColor="#006680"
            android:text="Voltar" />

        <Button
            android:id="@+id/btnProximo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Proximo"
            android:backgroundTint="#006680"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Link inferior -->
    <TextView
        android:id="@+id/textRetornarInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retornar ao início"
        android:textColor="#006680"
        android:layout_gravity="start"
        android:layout_marginTop="12dp" />
</LinearLayout>
